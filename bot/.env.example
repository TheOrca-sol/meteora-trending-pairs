# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_CLUSTER=mainnet-beta

# Wallet Configuration (KEEP SECURE!)
PRIVATE_KEY=your_base58_private_key_here
WALLET_PUBLIC_KEY=your_wallet_public_key_here

# Backend API
BACKEND_API_URL=http://localhost:5000

# External APIs
DEXSCREENER_API_URL=https://api.dexscreener.com/latest/dex
JUPITER_API_URL=https://lite-api.jup.ag
RUGCHECK_API_URL=https://api.rugcheck.xyz/v1
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY_HERE

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meteora_bot
DB_USER=postgres
DB_PASSWORD=your_password_here

# Bot Configuration
MIN_TVL=100000
MIN_APR=50
MAX_POSITION_PERCENT=20
MAX_POSITIONS=10
MIN_RESERVE_PERCENT=10
REBALANCE_INTERVAL_MINUTES=5
CLAIM_THRESHOLD_USD=10

# Risk Management
MAX_IMPERMANENT_LOSS_PERCENT=10
MAX_APR_DECLINE_PERCENT=50
MAX_PRICE_DROP_PERCENT=30
MAX_TVL_DROP_PERCENT=30

# Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
ENABLE_NOTIFICATIONS=true

# Logging
LOG_LEVEL=info
